<h1 class="title"><%= t("please_log_in") %></h1>

<%= form_for routes.path(:create_session), id: "login" do |f| %>
  <%= form.email_input(f) %>
  <%= form.password_input(f) %>

  <div class="field is-horizontal">
    <div class="field-label">
      <!-- Left empty for spacing -->
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= f.submit t("log_in"), class: "button is-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
