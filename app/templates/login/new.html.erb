<h1 class="title">Please log in</h1>

<%= form_for routes.path(:create_session) do |f| %>
  <%= form.email_input(f) %>
  <%= form.password_input(f) %>

  <div class="field is-horizontal">
    <div class="field-label">
      <!-- Left empty for spacing -->
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= f.submit "Log in", class: "button is-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
