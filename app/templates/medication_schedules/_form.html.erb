<%= form_for :medication_schedule, url, method: http_method do |f| %>
  <%= form.medication_id_input(f) %>
  <%= form.morning_input(f) %>
  <%= form.noon_input(f) %>
  <%= form.evening_input(f) %>
  <%= form.before_bed_input(f) %>
  <div class="field is-horizontal">
    <div class="field-label">
      <!-- Left empty for spacing -->
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <%= f.submit action, class: "button is-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>